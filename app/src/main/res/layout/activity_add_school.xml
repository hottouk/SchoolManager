<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".schoolActivity.AddSchoolActivity">

    <EditText
        android:id="@+id/school_activity_title_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="제목을 적어주세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/school_activity_title_edittext"
        android:id="@+id/school_activity_simpleInfo_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="간단한 정보를 적어주세요"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/school_activity_simpleInfo_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/school_activity_detail_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="생기부 문구를 적어주세요" />

    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/school_activity_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장" />

</androidx.constraintlayout.widget.ConstraintLayout>